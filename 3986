#include <string>
#include <iostream>
#include <vector>
#include <algorithm>
#include <vector>
#include <stack>
using namespace std;
int main(){
	
	
	int n;
	cin>>n;
	int sum=0;
	
	
	for(int i=0;i<n;i++){
		stack<char>st;
		string str;
		cin>>str;
		
		for(int j=0;j<str.length();j++){
	if(st.empty())
	st.push(str[j]);
	else{
		if(st.top()==str[j])
		st.pop();
		else
		st.push(str[j]);	
	}


}	if(st.empty())
sum++;}
	
	
	
	cout<<sum<<endl;

    return 0;
}
